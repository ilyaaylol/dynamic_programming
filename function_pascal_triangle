def function_pascal_triangle(n=6):
    if n <= 0:
        return []
    dp = []
    for i in range(n):
        dp.append([1] * (i + 1))
    for row in range(2, n):
        for col in range(1, row):
            dp[row][col] = dp[row - 1][col - 1] + dp[row - 1][col]
    return dp

triangle = function_pascal_triangle()

for row in triangle:
    print(f"{' '.join(map(str, row)):^17}")
